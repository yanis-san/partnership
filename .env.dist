# ============================================
# .env.dist - ENVIRONMENT TEMPLATE
# ============================================
# Copy this file to .env and fill in your values
# This file is safe to commit to version control
# DO NOT commit .env itself!

# ============================================
# SECURITY
# ============================================

# SECURITY WARNING: keep the secret key used in production secret!
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-here

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=True

# ============================================
# DJANGO CORE
# ============================================

# Comma-separated list of allowed hosts
# Example: localhost,127.0.0.1,yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Language and timezone
LANGUAGE_CODE=fr-fr
TIME_ZONE=Africa/Algiers

# ============================================
# DATABASE
# ============================================
# Choose your database:
# - SQLite (development): sqlite:///db.sqlite3
# - PostgreSQL: postgresql://user:password@localhost:5432/dbname
# - MySQL: mysql://user:password@localhost:3306/dbname

DATABASE_URL=sqlite:///db.sqlite3

# ============================================
# STATIC FILES & MEDIA
# ============================================

STATIC_URL=/static/
STATIC_ROOT=staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=media

# ============================================
# WHITENOISE
# ============================================

WHITENOISE_COMPRESS=True
WHITENOISE_AUTOREFRESH=True
WHITENOISE_MAX_AGE=31536000

# ============================================
# EMAIL CONFIGURATION
# ============================================

# Email backend
# Development: django.core.mail.backends.console.EmailBackend
# Production: django.core.mail.backends.smtp.EmailBackend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP Configuration (for Gmail, SendGrid, etc.)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

DEFAULT_FROM_EMAIL=noreply@instituttorii.com
SERVER_EMAIL=server@instituttorii.com

# ============================================
# ADMIN NOTIFICATIONS
# ============================================

# Format: "Name <email@domain.com>"
ADMINS=Admin <admin@instituttorii.com>
MANAGERS=

# ============================================
# SECURITY - HTTPS & SSL
# ============================================

SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
CSRF_COOKIE_HTTPONLY=True

SESSION_COOKIE_SAMESITE=Lax
CSRF_COOKIE_SAMESITE=Lax

# Session duration (in seconds)
# 86400 = 24 hours
SESSION_COOKIE_AGE=86400

# Browser security
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# HSTS (HTTP Strict Transport Security)
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# ============================================
# ADMIN URL (SECURITY)
# ============================================
# Generate with: python -c "import uuid; print(uuid.uuid4())"
# Example: admin-a1b2c3d4-e5f6-g7h8-i9j0-k1l2m3n4/
ADMIN_URL=admin/

# ============================================
# LOGGING
# ============================================

LOG_LEVEL=INFO

# ============================================
# OPTIONAL: THIRD-PARTY SERVICES
# ============================================

# Sentry (Error tracking)
# Sign up at https://sentry.io/
# Format: https://key@sentry.io/project-id
SENTRY_DSN=

# Redis Cache (optional, for high performance)
# Format: redis://127.0.0.1:6379/0
REDIS_URL=

# ============================================
# ROBOTS.TXT
# ============================================
# Allow search engines to crawl your site
ALLOW_ROBOTS=False

# ============================================
# EMAIL ALTERNATIVES
# ============================================

# SendGrid (instead of Gmail)
# SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# EMAIL_BACKEND=sendgrid_backend.SendgridBackend

# AWS SES
# AWS_SES_REGION_NAME=eu-west-1
# AWS_SES_REGION_ENDPOINT=email.eu-west-1.amazonaws.com
# EMAIL_BACKEND=django_ses.SESBackend
